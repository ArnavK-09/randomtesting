---
// props
export interface Props {
  icon: any;
  title: string;
  description: string;
}
const { title, description, icon } = Astro.props;

// card icon
const FeatureIcon = icon;
---

<div
  class="group hover:scale-105 ease-in-out transition hover:brightness-125 select-none rounded-lg p-1 from-[#ee4741] via-[#fc413b] to-[#e42720] bg-gradient-to-tl"
>
  <div class="bg-[#181b1f] rounded-lg w-full h-full p-3">
    <div class="text-center">
      <div class="w-full flex items-center justify-center">
        <div set:html={icon} class="h-11 my-4 w-11 fill-[#e42720] rounded-full">
          <!-- <FeatureIcon /> -->
        </div>
      </div>
      <h3 class="text-2xl tracking-wide text-[#e42720]">{title}</h3>
      <p class="text-md text-white/70">{description}</p>
    </div>
  </div>
</div>